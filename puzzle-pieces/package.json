{
  "name": "puzzle-pieces",
  "version": "0.8.0",
  "description": "puzzle massive puzzle pieces web component",
  "main": "dist/puzzle-pieces.min.js",
  "scripts": {
    "minifycss-prerequisites": "csssources src/puzzle-pieces.css > .minifycss-prerequisites",
    "minifycss": "postcss -c postcss.config.js -o src/puzzle-pieces.tmp.css src/puzzle-pieces.css",
    "minifyhtml": "html-minifier --case-sensitive --html5 --remove-attribute-quotes --remove-comments --remove-tag-whitespace --collapse-whitespace -o src/puzzle-pieces.tmp.html src/puzzle-pieces.html",
    "minifyjs": "uglifyjs src/puzzle-pieces.tmp.js --wrap puzzlePieces -c -m --keep-fnames --screw-ie8 -o dist/puzzle-pieces.min.js",
    "pretest": "standard",
    "prebuild": "rm -rf dist; mkdir -p dist",
    "build": "make",
    "prepublish": "npm run build",
    "debug": "npm run build",
    "preversion": "npm test && npm run build",
    "postversion": "npm pack && echo 'TODO: mv tar.gz file to ../ui-lib/'"
  },
  "author": "Jake Hickenlooper",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "cssnano": "^3.7.7",
    "csssources": "0.0.1",
    "html-minifier": "^3.1.0",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^8.1.2",
    "postcss-url": "^5.1.2",
    "standard": "^8.4.0",
    "uglify-es": "^3.3.9"
  },
  "standard": {
    "ignore": [
      "node_modules/*",
      "dist",
      "tests",
      "src/*.tmp*",
      "src/_*.js"
    ]
  },
  "dependencies": {}
}
